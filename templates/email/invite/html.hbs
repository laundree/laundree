{{#> email_layout.hbs title=(formatIntl 'email.invite.title' messages=messages)}}
    {{ formatIntl
            'email.invite.message'
            messages=messages
            name=(format '<b>{name}</b>' name=laundry.name)
            link=(format '<a href="https://laundree.io">{link}</a>'
                    link=(formatIntl 'email.invite.message.link' messages=messages))
            signup=(format "<a href='https://laundree.io/{locale}/auth/sign-up' style='display: block;margin: 20px auto;width: 60px;text-align: center;padding: 10px 40px;background-color: #f1a332;border-radius: 4px;color: #fff;text-decoration: none;' class='signup'>{link}</a>"
                    locale=locale
                    link=(formatIntl 'email.invite.message.signup' messages=messages))
            nl='<br />' }}
    <br/><br/>
    {{ formatIntl
            'email.signature'
            messages=messages
            nl='<br />' }}
{{/email_layout.hbs}}
