{{ formatIntl
        'email.password-reset.message'
        messages=messages
        name=user.displayName
        link=(format
                'https://laundree.io/{locale}/auth/reset?user={userId}&token={token}'
                userId=user.id
                locale=locale
                token=token)
        nl='' }}

{{ formatIntl
        'email.signature'
        messages=messages
        nl='' }}
