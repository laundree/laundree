{{ formatIntl
        'email.verify-email.message'
        messages=messages
        name=user.displayName
        email=(format '"{email}"' email=email)
        link=(format
                'https://laundree.io/{locale}/auth/verify?user={userId}&email={email}&token={token}'
                userId=user.id
                locale=locale
                email=emailEncoded
                token=token)
        nl='' }}

{{ formatIntl
        'email.signature'
        messages=messages
        nl='' }}
